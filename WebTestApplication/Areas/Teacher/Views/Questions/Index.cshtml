@using WebTest.Models

@model Questions
<html><body>
<div class="cointeiner p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Questions</h2>
        </div>
        
              <div class="col-6 text-end">
                <a asp-controller="TestCart" asp-action="Create" asp-route-id="@ViewBag.id">
                <i class="bi bi-plus-circle"></i>&nbsp;  New Question</a>
                </div>  
            
            
    </div>
    <br />
   
    <table class ="table table-bordered table-striped" style="width:100%">
      
        
    <tbody>
    @foreach(var obj in Model.ListQuestions)  
    {
    
      <thead>
       @* <tr>
            Zadania
        </tr>*@
    
        </thead>
        
        <tr>
            
            <td width="50%">
                <p><small>@Html.Raw(obj.Content)</small></p>
               
            </td>
           
            <td>
                <div class="w-75 btn-group" role="group">
                    <a asp-controller="Questions" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>&nbsp;Edit</a>
                    <a asp-controller="Questions" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-secondary mx-2"><i class="bi bi-trash"></i>&nbsp;Delete</a>
                </div>
            </td>
        </tr>
    }
    
</tbody>
</table> 

       
         <h10><i class="bi bi-link"></i>&nbsp; @TempData["host"]
            @TempData["fullurl"]
            </h10>   
        
        
</div>
</body>
</html>

  <script>
      var table = document.getElementsByTagName('table')[0],
  rows = table.getElementsByTagName('tr'),
  text = 'textContent' in document ? 'textContent' : 'innerText';


for (var i = 0, len = rows.length; i < len; i++) {
    
  rows[i].children[0][text] = 'Zadanie '+ (i+1 )+ ': ' + rows[i].children[0][text];
}    

      
     
             
        </script>