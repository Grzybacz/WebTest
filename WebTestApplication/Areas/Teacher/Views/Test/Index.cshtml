@using WebTest.Models
@model IEnumerable<Test>
    

<div class="cointeiner p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Test list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Test" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;  New Test</a>
        </div>
    </div>
    <br />

<table class ="table table-bordered table-striped" style="width:100%">
<thead>
    <tr>
        <th>
            Test Name
        </th>    
        <th>
            Description 
        </th>
        <th>
            Category
        </th>
        <th></th>
    </tr>

</thead>
<tbody>

    @foreach(var obj in Model)
    {
        <tr>
            <td width="50%">
                <a asp-controller="Questions" asp-action="Index" asp-route-id="@obj.Id" >@obj.Name</a>
                @*@obj.Name*@
            </td>
            <td width="30%">
                @obj.Description
            </td>
             <td width="30%">
                @obj.name_category
            </td>
            <td>
                <div class="w-75 btn-group" role="group">
                     <a asp-controller="TestCart" asp-action="Create" asp-route-id="@obj.Id" class="btn btn-primary mx-2"><i class="bi bi-plus-circle"></i>&nbsp;New Question</a>
                    <a asp-controller="Test" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-secondary mx-2"><i class="bi bi-pencil-square"></i>&nbsp;Edit</a>
                    <a asp-controller="Test" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2"><i class="bi bi-trash"></i>&nbsp;Delete</a>

                </div>
            </td>
        </tr>
    }

    

</tbody>
</table>
</div>



