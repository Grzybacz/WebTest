
<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    
</div>



@using WebTest.Models
@model PupilSession


<form method="post" asp-action="PupilSession">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
               Test
                <hr />
            </h2>
        </div>
        
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-denger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Surname"></label>
            <input asp-for="Surname" rows ="3" class="form-control"/>
            <span asp-validation-for="Surname" class="text-denger"></span>
        </div>
        <div class="mb-3">
            <label >Test</label>
            <select asp-for="TestId" asp-items="ViewBag.QuestionsList" class="form-select">
            <option disabled selected>--Select Test--</option>
           </select>            
        </div>
         <button type="submit" class="btn btn-primary" style="width:150px">Continue</button>
         
        
    </div>

    @if( TempData["error"]!= null)
{
    <div class="row">
        <div class="col-md-10">
            <p>
            @Html.Raw( TempData["error"])
            </p>
        </div>
    </div>
}
</form>


