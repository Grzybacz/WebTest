@using WebTest.Models
@model IEnumerable<PupilSession>    

<div class="cointeiner p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Pupil list</h2>
        </div>
        
    </div>
    <br />

<table class ="table table-bordered table-striped" style="width:100%">
<thead>
    <tr>
        <th>
            Name
        </th>    
        <th>
           Surname
        </th>
        
        <th></th>
    </tr>

</thead>
<tbody>

    @foreach(var obj in Model)
    {
        <tr>
            <td width="50%">
                <a  asp-controller="Second" asp-action="GetAnswer" asp-route-id="@obj.Id" >@obj.Name</a>
                
            </td>
            <td width="30%">
                @obj.Surname
            </td>            
           
                
            
        </tr>
    }

    

</tbody>
</table>
</div>


